    <script>
        // Function to calculate carbon footprint
        function calculateFootprint() {
            const distance = parseFloat(document.getElementById('distance').value);
            const mode = document.getElementById('mode').value;
            let emission = 0;

            if (mode === 'car') emission = distance * 0.2; // kg CO2 per km
            else if (mode === 'bus') emission = distance * 0.05;
            else if (mode === 'bike' || mode === 'walk') emission = 0;

            const resultDiv = document.getElementById('result');
            resultDiv.innerText = `Pegada de Carbono: ${emission.toFixed(2)} kg CO2`;
            resultDiv.style.display = 'block';
        }

        // Function to toggle details for bus/bike sections
        function toggleDetails(type) {
            const details = document.querySelector(`.${type}-details`);
            const button = document.querySelector(`.${type}-button`);
            if (details.style.display === 'block') {
                details.style.display = 'none';
                button.innerText = type === 'bus' ? 'Ver Detalhes' : 'Alugar Agora';
            } else {
                details.style.display = 'block';
                button.innerText = type === 'bus' ? 'Ocultar Detalhes' : 'Cancelar Aluguel';
                // Simulate action: For bike, alert booking
                if (type === 'bike') alert('Bicicleta alugada por 1 hora! Reduza sua pegada de carbono.');
            }
        }

        // Map click functionality
        document.getElementById('map-overlay').addEventListener('click', function() {
            document.getElementById('map-modal').style.display = 'flex';
        });

        document.getElementById('close-modal').addEventListener('click', function() {
            document.getElementById('map-modal').style.display = 'none';
        });

        window.addEventListener('click', function(event) {
            const modal = document.getElementById('map-modal');
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });
    </script>
